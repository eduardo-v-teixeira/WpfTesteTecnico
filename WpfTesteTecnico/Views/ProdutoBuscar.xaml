<Page x:Class="WpfTesteTecnico.Views.ProdutoBuscar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfTesteTecnico.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProdutoBuscar">

    <Grid>
        <StackPanel Margin="10">
            <StackPanel Margin="40, 0 , 40, 30">
                <Label Content="Marca ou modelo" Foreground="White"/>
                <TextBox x:Name="txtMarca" Text="{Binding Pedidos.Nome}" Height="20"/> 
            </StackPanel>
            <StackPanel Margin="40, 0, 40, 30">
                <DataGrid x:Name="dgrProdutos" ItemsSource="{Binding Produto}" HorizontalAlignment="Center" />
            </StackPanel>

            <Button Content="Buscar" Command="{Binding BuscarProduto}" Width="60" Height="30" Margin="0, 25, 0, 0" RenderTransformOrigin="0.6,5.546"/> 
        </StackPanel>
        
    </Grid>
</Page>
